@using Login
@inherits LayoutComponentBase
@inject NavigationManager navMgr

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
        <AuthorizeView>
            <NotAuthorized>
                <button class="btn btn-primary" @onclick=navigate>Create Account</button>
            </NotAuthorized>
        </AuthorizeView>
            <LoginButtons />
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code{
    private void navigate(){
        navMgr.NavigateTo("/createAcc");
    }
}